{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": 0,
        "no-console": "off",
        "no-unused-vars": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off",
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "import/first": "off"
    }
}